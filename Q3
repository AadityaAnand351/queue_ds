#include <iostream>
using namespace std;
int main() {
    string s;
    cout << "Enter a string: ";
    cin >> s;
    int freq[256] = {0};   // frequency array
   
    for(int i = 0; i < s.length(); i++) {
        freq[(unsigned char)s[i]]++;
    }

       for(int i = 0; i < s.length(); i++) {
        if(freq[(unsigned char)s[i]] == 1) {
            cout << "First non-repeating character: " << s[i] << endl;
            return 0;
        }
    }

    cout << "No non-repeating character found.\n";
    return 0;
}
